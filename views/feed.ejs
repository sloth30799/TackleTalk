<%- include('partials/header') -%>

<% for(var i=0; i<posts.length; i++) {%>
    <a href="/post/<%= posts[i]._id%>" class="text-decoration-none text-dark">
        <div class="card mb-3 m-auto mt-3 feed-boxes" style="max-width: 80%;">
            <div class="row g-0">
                <div class="col-md-4">
                    <img src="<%= posts[i].image%>" class="img-fluid rounded-start" alt="...">
                </div>
                <div class="col-md-8">
                    <div class="card-body row-8">
                        <p class="card-text"><small class="text-muted">Posted by <%= posts[i].user.userName%></small></p>
                        <h5 class="card-title text-decoration-none"><%= posts[i].title%></h5>
                        <p class="card-text"><%= posts[i].caption%></p>
                        <% if (posts[i].community) { %>
                            <p class="card-text text-end"><strong class="text-muted"><%= posts[i].community.name%></strong></p>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </a>
<% } %>

<%- include('partials/footer') -%>